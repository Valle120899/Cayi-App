<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/CayiColor">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:text="@string/app_name"
        android:fontFamily="@font/chewy"
        android:textSize="70sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >

    </TextView>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/CayiColor"
       android:layout_marginRight="30dp"
       android:layout_marginLeft="30dp"
       android:gravity="center_horizontal"
       android:paddingBottom="15dp" >
    <Button
        android:id="@+id/Entrar"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:textColor="@color/CayiColor"
        android:background="@drawable/button_circle_entrada"
        android:text="@string/title_login_activity">
    </Button>

    <Button
        android:id="@+id/Crear"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/Entrar"
        android:text="@string/text_cuenta_nueva"
        android:layout_marginLeft="30dp"
        android:textColor="@color/CayiColor"
        android:background="@drawable/button_circle_entrada"
        android:layout_toRightOf="@+id/Entrar">

    </Button>
   </LinearLayout>
</LinearLayout>