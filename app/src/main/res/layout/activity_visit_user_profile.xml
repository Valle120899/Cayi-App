<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".chat.VisitUserProfileActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/cover_display"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_image">
            </ImageView>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_display"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="140dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_image"

                >

            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/username_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:layout_below="@+id/profile_display"
                android:layout_centerInParent="true"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                >

            </TextView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv1"
        android:gravity="center"
        android:background="@color/color_light_blue_qb"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:padding="6dp"
        >

    </LinearLayout>

    <Button
        android:id="@+id/send_message_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ll1"
        android:background="@color/color_light_blue_qb"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:text="Send Message"
        ></Button>

    <Button
        android:id="@+id/send_friend_request_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:layout_marginTop="94dp"
        android:background="@color/color_light_blue_qb"
        android:text="Send Friend Request"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:visibility="gone"></Button>

    <Button
        android:id="@+id/decline_request_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:layout_marginTop="170dp"
        android:background="@color/color_light_blue_qb"
        android:text="Decline Friend Request"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:visibility="gone"></Button>


</RelativeLayout>