<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profile_image"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        >
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user name"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_marginTop="7dp"
        android:textColor="@color/black"
        android:layout_marginLeft="12dp"
        android:textSize="19sp">

    </TextView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_online"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:civ_border_width="12dp"
        app:civ_border_color="@color/color_accent"
        android:layout_below="@+id/username"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="-16dp"
        android:layout_toEndOf="@+id/profile_image"
        android:layout_toRightOf="@+id/username"
        android:src="@drawable/ic_person_big"
        android:visibility="gone">

    </de.hdodenhof.circleimageview.CircleImageView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_offline"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:civ_border_width="12dp"
        app:civ_border_color="@color/text_color_medium_grey"
        android:layout_below="@+id/username"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="-15dp"
        android:layout_toEndOf="@+id/profile_image"
        android:layout_toRightOf="@+id/username"
        android:src="@drawable/ic_person_big"
        android:visibility="gone">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/message_last"
        android:layout_below="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_marginLeft="20dp"
        android:maxLines="1"
        android:textColor="@color/text_color_call_type"
        android:textSize="16sp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:gravity="center"
        android:background="@color/CayiSecondColor"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="2dp"
        android:padding="0.5dp"
        >
    </LinearLayout>

</RelativeLayout>